<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Button" x:Key="BtnNavigationStyle">
        <Setter Property="Background" Value="#4783c4"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#4783c4"/>
    </Style>
    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="#4783c4"/>
        <Setter Property="MinHeight" Value="25"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="MinWidth" Value="80"/>
        <Setter Property="Foreground" Value="#f2f2f2"/>
        <Setter Property="BorderThickness" Value="1,0,0,0"/>
        <Setter Property="BorderBrush" Value="White"/>
    </Style>
    <Style TargetType="DataGrid">
        <Setter Property="HorizontalGridLinesBrush" Value="#d4d4d4"/>
        <Setter Property="VerticalGridLinesBrush" Value="#d4d4d4"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
    </Style>
    <Style TargetType="DataGridColumnHeadersPresenter">
        <Setter Property="BorderBrush" Value="White"/>
    </Style>
</ResourceDictionary>